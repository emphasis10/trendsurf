# Core
APP_ENV=development
TZ=Asia/Seoul
JWT_SECRET=replace-with-secure-value
CORS_ORIGIN=http://localhost:3000

# Database
POSTGRES_DB=trendsurf
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/trendsurf

# Redis
REDIS_URL=redis://redis:6379/0

# Qdrant
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_PAPERS=paper_vectors
QDRANT_COLLECTION_TOPICS=topic_vectors

# Providers
LLM_ALLOWLIST=ollama:llama3,openai_compat:gpt-4o-mini
OLLAMA_BASE_URL=https://ollama.example.com
OLLAMA_TIMEOUT=120
OPENAI_BASE_URL=
OPENAI_API_KEY=
OPENAI_TIMEOUT=60

# Embeddings (system-wide)
EMBED_PROVIDER=ollama
EMBED_BASE_URL=https://ollama.example.com
EMBED_API_KEY=
EMBED_MODEL=nomic-embed-text
EMBED_DIMENSIONS=1536

# GROBID
GROBID_URL=http://grobid:8070
GROBID_TIMEOUT=60

# Ingestion
ARXIV_DELAY_MS=3200
ARXIV_MAX_RESULTS_PER_RUN=40
PDF_MAX_MB=40
USER_AGENT=TrendSurfBot/0.1 (mailto:ops@example.com)

# Worker
RQ_QUEUE=default
